const { Client } = require('pg');

module.exports = {
  run_sql: run_sql
}

function run_sql(query) {
  const client = new Client({
    connectionString: proccess.env.DATABASE_URL,
    ssl: true
  });

  client.connect();

  client.query(query, (err, res) => {
    if (err) throw err;
    for (let row of res.rows) {
      console.log(JSON.stringify(row));
    }
    client.end();
  });
}
